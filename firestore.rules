rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAuthenticated() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isUser(uid) {
      return request.auth.uid == uid;
    }

    function isAdmin() {
      return isAuthenticated() && getUserData().role == 'admin';
    }

    function isGuru() {
      return isAuthenticated() && getUserData().role == 'guru';
    }

    function hasTugas(tugas) {
      let tugasList = getUserData().tugasTambahan;
      return tugasList is list && tugas in tugasList;
    }

    function isKepalaSekolah() {
      return isGuru() && hasTugas('kepala_sekolah');
    }

    function isKepalaTataUsaha() {
      return isGuru() && hasTugas('kepala_tata_usaha');
    }

    function isWakasek() {
      return isGuru() && (hasTugas('kesiswaan') || hasTugas('kurikulum') || hasTugas('bendahara'));
    }

    function isTUStaff(uid) {
      let user = get(/databases/$(database)/documents/users/$(uid)).data;
      return user.tugasTambahan is list &&
        ('operator' in user.tugasTambahan || 'staf_tu' in user.tugasTambahan || 'satpam' in user.tugasTambahan || 'penjaga_sekolah' in user.tugasTambahan);
    }

    // --- users ---
    match /users/{userId} {
      allow get: if isAuthenticated() && (isAdmin() || isUser(userId));
      allow list: if isAdmin() || isKepalaSekolah();
      allow create, delete: if isAdmin();
      allow update: if isAdmin() || isUser(userId);
    }

    // --- siswa ---
    match /siswa/{docId} {
      allow read: if isAuthenticated() && (isAdmin() || isGuru());
      allow write: if isAdmin();
    }

    // --- nilai ---
    match /nilai/{docId} {
      allow get, list: if isAuthenticated() && (isAdmin() || resource.data.teacherUid == request.auth.uid);
      allow create, update, delete: if isAuthenticated() && (isAdmin() || (isGuru() && request.resource.data.teacherUid == request.auth.uid));
    }

    // --- agenda_kelas ---
    match /agenda_kelas/{docId} {
      allow get, list: if isAuthenticated() && (isAdmin() || resource.data.teacherUid == request.auth.uid);
      allow create, update, delete: if isAuthenticated() && (isAdmin() || (isGuru() && request.resource.data.teacherUid == request.auth.uid));
    }

    // --- teacherDailyAttendance ---
    match /teacherDailyAttendance/{docId} {
      allow get: if isAuthenticated() && (isAdmin() || docId.split('_')[0] == request.auth.uid);
      allow list: if isAuthenticated();
      allow create: if isAuthenticated() && isGuru() && request.resource.data.teacherUid == request.auth.uid;
      allow update, delete: if isAuthenticated() && (isAdmin());
    }

    match /teacherAttendance/{docId} {
      allow read, write: if isAdmin();
    }

    // --- laporan_kegiatan ---
    match /laporan_kegiatan/{docId} {
      allow read: if isAuthenticated() && (
        isAdmin() ||
        isKepalaSekolah() ||
        (isKepalaTataUsaha() && isTUStaff(resource.data.createdByUid)) ||
        resource.data.createdByUid == request.auth.uid
      );

      allow create: if isAuthenticated() && isGuru() && request.resource.data.createdByUid == request.auth.uid;

      allow update, delete: if isAuthenticated() && (isAdmin() || resource.data.createdByUid == request.auth.uid);
    }

    // --- pelanggaran_siswa ---
    match /pelanggaran_siswa/{docId} {
      allow read: if isAuthenticated() && (isAdmin() || hasTugas('kesiswaan'));
      allow create: if isAuthenticated() && isGuru() && (hasTugas('kesiswaan') || hasTugas('bk'));
      allow update, delete: if isAdmin() || hasTugas('kesiswaan');
    }

    // --- read-only public config ---
    match /academicYearConfigs/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /kkm_settings/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /bobot/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /mataPelajaranMaster/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /pengumuman/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /schoolConfig/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /activity_logs/{docId} {
      allow read, write: if isAdmin();
    }
  }
}
