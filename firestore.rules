rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function isGuru() {
      return isSignedIn() && getUserRole() == 'guru';
    }

    function isAdmin() {
      return isSignedIn() && getUserRole() == 'admin';
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isKepalaSekolah() {
      return isGuru() && 'kepala_sekolah' in getUserData(request.auth.uid).tugasTambahan;
    }

    function isKesiswaan() {
        return isGuru() && 'kesiswaan' in getUserData(request.auth.uid).tugasTambahan;
    }
    
    function isKepalaTataUsaha() {
      return isGuru() && 'kepala_tata_usaha' in getUserData(request.auth.uid).tugasTambahan;
    }

    // Rules for collections
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId) || isAdmin();
    }

    match /siswa/{document=**} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /bobot/{document=**} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /nilai/{document=**} {
      allow read: if isSignedIn();
      allow create: if isGuru();
      allow update, delete: if isGuru() && resource.data.teacherUid == request.auth.uid || isAdmin();
    }

    match /activity_logs/{document=**} {
        allow read: if isAdmin() || isKepalaSekolah();
        allow write: if isAdmin() || isGuru();
    }
    
    match /academicYearConfigs/{document=**} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }

    match /kkm_settings/{document=**} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }
    
    match /mataPelajaranMaster/{document=**} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }
    
    match /pengumuman/{document=**} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }
    
    match /teacherAttendance/{document=**} {
      allow read: if isAdmin() || isKepalaSekolah();
      allow write: if isAdmin();
    }

    match /teacherDailyAttendance/{dailyId} {
      allow read: if (isOwner(dailyId.split('_')[0])) || (isAdmin() || isKepalaSekolah());
      allow list: if isAdmin() || isKepalaSekolah() || (isGuru() && request.query.where[0][2] == request.auth.uid);
      allow write: if isOwner(dailyId.split('_')[0]) || isAdmin();
    }
    
     match /schoolConfig/{document=**} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }
    
    match /pelanggaran_siswa/{document=**} {
        allow read: if isAdmin() || isKepalaSekolah() || isKesiswaan();
        allow write: if isGuru();
    }
    
    match /laporan_kegiatan/{document=**} {
        allow read: if isAdmin() || isKepalaSekolah() || isKepalaTataUsaha() || (isGuru() && resource.data.createdByUid == request.auth.uid);
        allow create, update, delete: if isGuru();
    }
    
    match /agenda_kelas/{document=**} {
        allow read: if isAdmin() || isKepalaSekolah();
        allow create, update, delete: if isGuru();
        allow list: if (isAdmin() || isKepalaSekolah()) || (isGuru() && request.query.where[0][2] == request.auth.uid);
    }
  }
}
